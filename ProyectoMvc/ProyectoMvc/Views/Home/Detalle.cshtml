@using ProyectoMvc.Services.Implementaciones;
@model ProyectoMvc.Models.PersonaViewModel
<div class="row">
    <form action="@Url.Action("ModificarPersona","Home")" method="post">
     
        <div class="col-md-4">

            <input type="hidden" name="id" value="@Model.id" />
            <div class="form-group">
                <label class="control-label"></label>
                <input type="text" class="form-control" id="cuil" name="cuil" value="@Model.Cuil" readonly />
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input class="form-control" id="ApellidoYNombre" name="ApellidoYNombre" value="@Model.ApellidoYNombre" readonly />
            </div>
            <div class="form-group mb-3">
                <label class="control-label"></label>
                <input type="text" class="form-control" id="Edad" name="Edad" value="@Utils.CalcularEdad(Model.FechaNacimiento)" readonly />
            </div>
            <div class="form-group">         
                <button type="button" id="habilitar" onclick="HabilitarCampos()" class="btn btn-default">Editar</button>
                <button type="submit" class="btn btn-primary" style="display:none" id="botonAgregar">Guardar</button>
                <a id="#OpenModal" onclick="ModalEliminar()" class="btn btn-danger">Eliminar</a>
            </div>
        </div>

    </form>

</div>
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Desea Eliminar el Registro?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close" data-dismiss="modal">No</button>
                <a type="button" href="@Url.Action("Eliminar", "Home", new { id = Model.id })" id="btnID" class="btn btn-danger">Si</a>
            </div>
        </div>
    </div>
</div>

