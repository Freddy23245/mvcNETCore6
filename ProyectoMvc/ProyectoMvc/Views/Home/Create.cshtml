﻿<h1>Crear Personas</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @*<form asp-action="Create" asp-controller="Home" method="post">*@

        <div class="form-group">
            <label class="control-label"></label>
            <input type="text" class="form-control" id="cuil" name="cuil" placeholder="Cuil" />
        </div>
        <div class="form-group">
            <label class="control-label"></label>
            <input class="form-control" id="ApellidoYNombre" name="ApellidoYNombre" placeholder="Apellido y Nombre" />
        </div>
        <div class="form-group">
            <label class="control-label"></label>
            <input type="date" class="form-control" id="FechaNacimiento" name="FechaNacimiento" placeholder="Fecha Nacimiento" />
        </div>
        <input type="hidden" id="UrlPostPersonas" value="@Url.Action("Create","Home")" />
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="botonAgregar">Agregar</button>
        </div>
        @*</form>*@
    </div>
</div>
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Registro Personas</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Datos Registrado Correctamente!!</p>
            </div>
            <div class="modal-footer">

                <a type="button" href="@Url.Action("Index","Home")" id="btnID" class="btn btn-primary">OK</a>
            </div>
        </div>
    </div>
</div>
<script>
    window.addEventListener("load", function (event) {
        create.init();
    });
</script>